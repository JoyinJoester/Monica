<?xml version="1.0" encoding="utf-8"?>
<!-- Material 3 风格的自动填充卡片式项目 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    
    <!-- 卡片容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/autofill_card_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:minHeight="64dp">
        
        <!-- 左侧图标容器 -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/autofill_inline_icon_background">
            
            <ImageView
                android:id="@+id/icon_app"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_key"
                android:scaleType="centerInside"
                android:tint="@color/autofill_icon_tint"
                android:contentDescription="@null" />
        </FrameLayout>
        
        <!-- 中间文本内容 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/autofill_text_primary"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                tools:text="示例账户" />
            
            <TextView
                android:id="@+id/text_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/autofill_text_secondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:fontFamily="sans-serif"
                tools:text="user@example.com" />
        </LinearLayout>
        
        <!-- 右侧按钮图标 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/autofill_text_secondary"
            android:contentDescription="@null" />
    </LinearLayout>
</FrameLayout>
