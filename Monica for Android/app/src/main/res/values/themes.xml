<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Monica" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 沉浸式状态栏配置 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
    </style>
    
    <!-- 透明Activity主题,用于半屏BottomSheet -->
    <style name="Theme.Transparent" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    
    <!-- Material透明对话框主题,用于需要Material组件的认证对话框 -->
    <style name="Theme.TransparentDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Bottom Sheet主题,用于AutofillPicker -->
    <style name="Theme.Monica.BottomSheet" parent="Theme.Monica">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    
    <!-- Passkey 活动主题 - 必须是透明的，这样才能正确地显示在调用方应用之上 -->
    <style name="Theme.Monica.Passkey" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- 深色认证对话框配色 -->
    <style name="ThemeOverlay.Monica.AutofillAuth" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/autofill_auth_dialog_surface</item>
        <item name="colorOnSurface">@color/autofill_auth_dialog_on_surface</item>
        <item name="colorPrimary">@color/autofill_auth_dialog_accent</item>
        <item name="colorSecondary">@color/autofill_auth_dialog_accent</item>
        <item name="colorOutline">@color/autofill_auth_dialog_accent</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.Monica.AutofillDialog</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.Monica.AutofillDialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.Monica.AutofillDialog.Body</item>
        <item name="android:windowAnimationStyle">@style/Animation.Monica.Dialog.FadeUp</item>
    </style>

    <style name="ShapeAppearance.Monica.AutofillDialog" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TextAppearance.Monica.AutofillDialog.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/autofill_auth_dialog_on_surface</item>
    </style>

    <style name="TextAppearance.Monica.AutofillDialog.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/autofill_auth_dialog_on_surface</item>
    </style>

    <style name="Animation.Monica.Dialog.FadeUp" parent="@style/Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>