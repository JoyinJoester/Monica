<?xml version="1.0" encoding="utf-8"?>
<!-- 方案2：横幅样式（显示在输入法上方）- 参考图片样式 -->
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="@drawable/autofill_banner_background"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:gravity="center_vertical">
    
    <!-- 来源标识（域名/应用名） -->
    <TextView
        android:id="@+id/text_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/autofill_text_primary"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="100dp"
        tools:text="facebook.com" />
    
    <!-- 分隔线 -->
    <ImageView
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="#12000000"
        android:contentDescription="@null" />
    
    <!-- 建议项容器 -->
    <LinearLayout
        android:id="@+id/suggestions_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        
        <!-- 用户名建议Chip -->
        <TextView
            android:id="@+id/chip_username"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginEnd="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="@drawable/autofill_suggestion_chip_background"
            android:textSize="13sp"
            android:textColor="@color/autofill_chip_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="120dp"
            tools:text="user@example.com" />
        
        <!-- 密码建议Chip -->
        <TextView
            android:id="@+id/chip_password"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="@drawable/autofill_suggestion_chip_background"
            android:textSize="13sp"
            android:textColor="@color/autofill_chip_text"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="80dp"
            tools:text="••••••••" />
    </LinearLayout>
    
    <!-- 右侧密码管理器图标 -->
    <FrameLayout
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/autofill_banner_icon_background">
        
        <ImageView
            android:id="@+id/icon_manager"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_shield"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            android:contentDescription="@string/autofill_manager_icon" />
    </FrameLayout>
</LinearLayout>
